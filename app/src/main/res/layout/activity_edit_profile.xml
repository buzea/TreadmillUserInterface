<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="eu.buzea.treadmill.EditProfileActivity">


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="4"
        android:columnCount="5"
        android:orientation="horizontal"
        android:rowCount="6"
        android:layout_gravity="center_horizontal">


        <TextView
            android:id="@+id/email_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:text="Email:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:text="Name:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/gender_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:text="Gender:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/age_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_row="3"
            android:text="Age:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/age_value_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:layout_row="3"
            android:text="years"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/weight_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_row="4"
            android:text="Weight:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/weight_value_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:layout_row="4"
            android:text="Kg"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/height_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_row="5"
            android:text="Height:"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:id="@+id/email_editText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_gravity="center_vertical"
            android:layout_row="0"
            android:ems="10"
            android:layout_columnSpan="1"
            android:layout_rowWeight="1" />

        <EditText
            android:id="@+id/name_editText"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_gravity="center_vertical"
            android:layout_row="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1" />

        <ToggleButton
            android:id="@+id/gender_toggleButton"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_gravity="center_vertical"
            android:layout_row="2"
            android:checked="false"
            android:text="New ToggleButton"
            android:textOff="MALE"
            android:textOn="FEMALE"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1" />

        <SeekBar
            android:id="@+id/age_seekBar"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_gravity="center_vertical"
            android:layout_row="3"
            android:indeterminate="false"
            android:max="120"
            android:progress="20"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1" />

        <SeekBar
            android:id="@+id/weight_seekBar"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_gravity="center_vertical"
            android:layout_row="4"
            android:indeterminate="false"
            android:max="150"
            android:progress="80"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1" />

        <SeekBar
            android:id="@+id/height_seekBar"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_gravity="center_vertical"
            android:layout_row="5"
            android:indeterminate="false"
            android:max="250"
            android:progress="170"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1" />

        <TextView
            android:id="@+id/height_value_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:layout_row="5"
            android:text="cm"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/age_minus_button"
            android:layout_row="3"
            android:layout_column="3"
            android:background="@drawable/minus_button"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:onClick="modify" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/weight_minus_button"
            android:layout_row="4"
            android:layout_column="3"
            android:background="@drawable/minus_button"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:onClick="modify" />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/height_minus_button"
            android:layout_row="5"
            android:layout_column="3"
            android:background="@drawable/minus_button"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:onClick="modify" />

        <Button
            android:id="@+id/age_plus_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_column="4"
            android:layout_row="3"
            android:background="@drawable/plus_button"
            android:layout_gravity="center"
            android:layout_columnWeight="0"
            android:layout_margin="1dp"
            android:onClick="modify" />

        <Button
            android:id="@+id/weight_plus_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_column="4"
            android:layout_row="4"
            android:background="@drawable/plus_button"
            android:layout_gravity="center"
            android:layout_columnWeight="0"
            android:layout_margin="1dp"
            android:onClick="modify" />

        <Button
            android:id="@+id/height_plus_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_column="4"
            android:layout_row="5"
            android:background="@drawable/plus_button"
            android:layout_gravity="center"
            android:layout_columnWeight="0"
            android:layout_margin="1dp"
            android:onClick="modify" />


    </GridLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/edit_confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:text="Confirm" />

        <Button
            android:id="@+id/edit_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>
